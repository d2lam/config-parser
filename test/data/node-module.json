{
    "jobs": {
        "main": [
            {
                "image": "node:4",
                "commands": [
                    {
                        "name": "init",
                        "command": "npm install",
                        "alwaysRun": false
                    },
                    {
                        "name": "test",
                        "command": "npm test",
                        "alwaysRun": false
                    }
                ],
                "environment": {
                    "NODE_ENV": "test",
                    "NODE_VERSION": "4"
                },
                "secrets": [],
                "settings": {}
            },
            {
                "image": "node:5",
                "commands": [
                    {
                        "name": "init",
                        "command": "npm install",
                        "alwaysRun": false
                    },
                    {
                        "name": "test",
                        "command": "npm test",
                        "alwaysRun": false
                    }
                ],
                "environment": {
                    "NODE_ENV": "test",
                    "NODE_VERSION": "5"
                },
                "secrets": [],
                "settings": {}
            },
            {
                "image": "node:6",
                "commands": [
                    {
                        "name": "init",
                        "command": "npm install",
                        "alwaysRun": false
                    },
                    {
                        "name": "test",
                        "command": "npm test",
                        "alwaysRun": false
                    }
                ],
                "environment": {
                    "NODE_ENV": "test",
                    "NODE_VERSION": "6"
                },
                "secrets": [],
                "settings": {}
            }
        ],
        "publish": [
            {
                "image": "node:4",
                "commands": [
                    {
                        "name": "bump",
                        "command": "npm run bump",
                        "alwaysRun": false
                    },
                    {
                        "name": "publish",
                        "command": "npm publish --tag $NODE_TAG",
                        "alwaysRun": false
                    },
                    {
                        "name": "tag",
                        "command": "git push origin --tags",
                        "alwaysRun": false
                    }
                ],
                "environment": {
                    "NODE_ENV": "test",
                    "NODE_TAG": "latest"
                },
                "secrets": [
                    "NPM_TOKEN"
                ],
                "settings": {}
            }
        ]
    },
    "workflow": [
        "main",
        "publish"
    ]
}
