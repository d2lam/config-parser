{
    "jobs": {
        "main": [{
            "image": "node:4",
            "commands": [
                {
                    "name": "install",
                    "command": "npm install",
                    "alwaysRun": false
                },
                {
                    "name": "test",
                    "command": "npm test",
                    "alwaysRun": false
                }
            ],
            "environment": {
                "FOO": "overwritten by job",
                "BAR": "foo"
            },
            "secrets": [
                "GIT_KEY"
            ],
            "settings": {
                "email": "foo@example.com"
            }
        }],
      "publish": [{
          "image": "node:4",
          "commands": [
              {
                  "name": "publish",
                  "command": "npm publish",
                  "alwaysRun": false
              }
          ],
          "environment": {},
          "secrets": [],
          "settings": {}
      }]
    },
    "workflow": [
        "main",
        "publish"
    ]
}
